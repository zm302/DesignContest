<script type="text/javascript" src="~/Scripts/echarts.min.js"></script>
<script type="text/javascript">

    var myChart = echarts.init(document.getElementById('datashow'));
    @*var time = @jsonTime
    var cherry = @jsonCherry
    var pineapple = @jsonPineapple*@
    option = {
        title: {
            text: ''
        },
        tooltip: {
            trigger: 'axis'
        },
        legend: {
            data: ['温度(°C)', '湿度（%）']
        },
        grid: {
            left: '3%',
            right: '4%',
            bottom: '3%',
            containLabel: true
        },
        toolbox: {
            feature: {
                saveAsImage: {}
            }
        },
        xAxis: {
            name:'时间',
            type: 'category',
            boundaryGap: false,
            data: ['6', '8', '10', '12', '14']
        },
        yAxis: {
            name:'温湿度',
            type: 'value'
        },
        series: [
            {
                name: '温度(°C)',
                type: 'line',
                stack: '总量',
                data: @jsonCherry
            },
            {
                name: '湿度（%）',
                type: 'line',
                stack: '总量',
                data: @jsonPineapple
            }


        ]
    };
    myChart.setOption(option);
</script>